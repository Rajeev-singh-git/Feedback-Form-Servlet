<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         version="6.0">

    <display-name>feedback_app</display-name>

    <!-- Application-level parameter -->
    <context-param>
        <param-name>app_name</param-name>
        <param-value>FeedbackApp</param-value>
    </context-param>

    <!-- Servlet 1 -->
    <servlet>
        <servlet-name>servlet1</servlet-name>
        <servlet-class>
            feedback_app.session.manage.Request1Servlet
        </servlet-class>
        
         <!-- Servlet-level init param -->
        <init-param>
            <param-name>userName</param-name>
            <param-value>Rajeev</param-value>
        </init-param>
    </servlet>

    <!-- Servlet 2 -->
    <servlet>
        <servlet-name>servlet2</servlet-name>
        <servlet-class>
            feedback_app.session.manage.Request2Servlet
        </servlet-class>
        
          <!-- Servlet-level init param -->
        <init-param>
            <param-name>userEmail</param-name>
            <param-value>rajeev@mail.com</param-value>
        </init-param>
    </servlet>

    <!-- URL mappings -->
    <servlet-mapping>
        <servlet-name>servlet1</servlet-name>
        <url-pattern>/servlet1</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>servlet2</servlet-name>
        <url-pattern>/servlet2</url-pattern>
    </servlet-mapping>
    
    <filter>
   	    <filter-name>authFilter</filter-name>
        <filter-class>feedback_app.filter.AuthFilter</filter-class>
	</filter>

   <filter-mapping>
       <filter-name>authFilter</filter-name>
       <url-pattern>/servlet2</url-pattern>
    </filter-mapping>
    

</web-app>
